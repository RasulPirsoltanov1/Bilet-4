@using Bilet_4.ViewModels;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/_Layout.cshtml";
}
@model SettingViewModel
<div class="card" style="width:100%">
    <div class="card-body">
        <h4 class="card-title">Site settings</h4>
        <p class="card-description">
            Basic form layout
        </p>
        <form class="forms-sample" method="Post">
            <div class="form-group">
                <label for="exampleInputUsername1"> SiteName</label>
                <input asp-for="SiteName" class="form-control" id="exampleInputUsername1" placeholder="IconName">
                <span asp-validation-for="SiteName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="exampleInputUsername1"> Location</label>
                <input asp-for="Location" class="form-control" id="exampleInputUsername1" placeholder="Title">
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="exampleInputUsername1"> Icon</label>
                <img src="~/home_assets/assets/img/@Model.Icon" />
                <input asp-for="Icon" class="form-control" id="exampleInputUsername1" placeholder="Description">
                <span asp-validation-for="Icon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="exampleInputUsername1"> Logo</label>
                <img src="~/home_assets/assets/img/@Model.Logo" />
                <input asp-for="Logo" class="form-control" id="exampleInputUsername1" placeholder="Description">
                <span asp-validation-for="Logo" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary mr-2">Update</button>
            <button class="btn btn-light" asp-action="Index">Cancel</button>
        </form>
    </div>
</div>

